    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "npm run build && electron-builder",
        "preview": "vite preview"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "electron-store": "^8.1.0",
        "sql.js": "^1.10.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@types/node": "^20.11.0",
        "@types/uuid": "^9.0.0",
        "@vitejs/plugin-react": "^4.2.0",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.0",
        "concurrently": "^8.2.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.gratech.comet-x",
        "productName": "Comet-X",
        "directories": {
            "output": "release"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        }
    }
}